<Window x:Class="GTAHandler.Views.AboutDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        Title="About"
        Width="420" Height="580"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False">
    
    <Border Background="{StaticResource PrimaryBrush}" 
            BorderBrush="{StaticResource HoverBrush}" 
            BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Title Bar -->
            <Border Grid.Row="0" 
                    Background="{StaticResource SecondaryBrush}" 
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid Height="36">
                    <TextBlock Text="About" FontSize="12" 
                               Foreground="{StaticResource TextDimBrush}" 
                               VerticalAlignment="Center" Margin="16,0,0,0"/>
                    <Button HorizontalAlignment="Right"
                            Click="CloseButton_Click"
                            Width="46" Height="36">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border" Background="{TemplateBinding Background}">
                                                <fa:IconImage x:Name="icon" Icon="Times" Width="10" Height="10" 
                                                                 Foreground="{StaticResource TextDimBrush}"
                                                                 HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="{StaticResource ErrorBrush}"/>
                                                    <Setter TargetName="icon" Property="Foreground" Value="White"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>
            
            <!-- Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="32,24">
                    <!-- App Name -->
                    <TextBlock Text="GTA Handler" 
                               FontSize="22" FontWeight="Bold"
                               Foreground="{StaticResource TextBrush}"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Version 1.0.0" 
                               FontSize="12"
                               Foreground="{StaticResource TextDimBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,4,0,20"/>
                    
                    <!-- Game Logos - Original Games -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,12">
                        <Image Source="/Resources/gta3.png" Width="60" Height="60" Margin="8,0" 
                               RenderOptions.BitmapScalingMode="HighQuality"/>
                        <Image Source="/Resources/gtavc.png" Width="60" Height="60" Margin="8,0"
                               RenderOptions.BitmapScalingMode="HighQuality"/>
                        <Image Source="/Resources/gtasa.png" Width="60" Height="60" Margin="8,0"
                               RenderOptions.BitmapScalingMode="HighQuality"/>
                    </StackPanel>
                    
                    <!-- Game Logos - Definitive Edition -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                        <Image Source="/Resources/gta3de.png" Width="60" Height="60" Margin="8,0" 
                               RenderOptions.BitmapScalingMode="HighQuality"/>
                        <Image Source="/Resources/gtavcde.png" Width="60" Height="60" Margin="8,0"
                               RenderOptions.BitmapScalingMode="HighQuality"/>
                        <Image Source="/Resources/gtasade.png" Width="60" Height="60" Margin="8,0"
                               RenderOptions.BitmapScalingMode="HighQuality"/>
                    </StackPanel>
                    
                    <!-- Description -->
                    <TextBlock Text="A visual editor for viewing and editing handling.cfg files from GTA III, GTA Vice City, GTA San Andreas, and their Definitive Edition versions."
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               FontSize="12"
                               Foreground="{StaticResource TextDimBrush}"
                               Margin="0,0,0,24"/>
                    
                    <!-- Developer -->
                    <TextBlock Text="Developed by"
                               FontSize="11"
                               Foreground="{StaticResource TextDimBrush}"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Vaibhav Pandey (VPZ)"
                               FontSize="14" FontWeight="SemiBold"
                               Foreground="{StaticResource TextBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,4,0,20"/>
                    
                    <!-- Links -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,24">
                        <Button Style="{StaticResource LinkButton}" Content="Website" Click="Website_Click" Margin="0,0,8,0"/>
                        <Button Style="{StaticResource LinkButton}" Content="YouTube" Click="YouTube_Click" Margin="0,0,8,0"/>
                        <Button Style="{StaticResource LinkButton}" Content="GitHub" Click="GitHub_Click" Margin="0,0,8,0"/>
                        <Button Style="{StaticResource LinkButton}" Content="Email" Click="Email_Click" Margin="0,0,8,0"/>
                        <Button Style="{StaticResource LinkButton}" Content="Issues" Click="Support_Click"/>
                    </StackPanel>
                    
                    <!-- Disclaimer -->
                    <TextBlock Text="All names and logos are property of their respective owners and are used for illustration purposes only."
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               FontSize="10"
                               Foreground="{StaticResource TextDimBrush}"/>
                </StackPanel>
            </ScrollViewer>
            
            <!-- Close Button -->
            <Border Grid.Row="2" 
                    Background="{StaticResource SecondaryBrush}" 
                    Padding="16,12">
                <Button Click="CloseButton_Click"
                        MinWidth="100"
                        HorizontalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <fa:IconImage Icon="Times" Width="10" Height="10" VerticalAlignment="Center" Margin="0,0,6,0"/>
                        <TextBlock Text="Close" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Border>
        </Grid>
    </Border>
</Window>

